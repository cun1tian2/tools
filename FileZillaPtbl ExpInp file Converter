10 use MIME::Base64; 
11 $file="./tmp/sites.xml"; 
12 $_=`cat $file`; 
13 s/(base64">)(.+)(<\/Pass>)/$1.decode_base64($2).$3/eg;	# 重複実行しても合致せず変換されない 
14 `echo "$_" > $file`;					# use "$_" or '$_',  \n irregular NG if only $_. 
